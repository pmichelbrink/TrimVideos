                    <Style TargetType="ListView">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ViewType}" Value="1">
                                <Setter Property="View" Value="{StaticResource one}" />
                            </DataTrigger>
                        </Style.Triggers>
                        <Setter Property="View" Value="{StaticResource one}" />
                    </Style>
                </ListView.Style>-->
            </ListView>
            <!--<ListBox x:Name="lstOutput"  Margin="10,5" ItemsSource="{Binding CompletedVideos}"></ListBox>-->
        </StackPanel>
    </Grid>
</Window>
